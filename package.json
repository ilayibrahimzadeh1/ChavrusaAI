{
  "name": "torah-learning-app",
  "version": "1.0.0",
  "description": "An AI-powered Torah learning partner with rabbi personalities integrated with Sefaria API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm run dev",
    "dev:all": "npm-run-all --parallel dev client",
    "build:client": "cd client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"public/**/*.js\"",
    "health": "node -e \"require('./src/config'); console.log('Configuration valid');\""
  },
  "keywords": [
    "torah",
    "jewish",
    "learning",
    "ai",
    "sefaria",
    "rabbi",
    "education",
    "chatbot"
  ],
  "author": "Torah Learning App",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/translate": "^9.2.0",
    "@supabase/supabase-js": "^2.58.0",
    "axios": "^1.9.0",
    "better-sqlite3": "^12.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "openai": "^4.100.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/torah-learning-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/torah-learning-app/issues"
  },
  "homepage": "https://github.com/your-username/torah-learning-app#readme"
}
